<script>
  const buttons = document.querySelectorAll("button");
  buttons.forEach((button) => {
    button.addEventListener("click", () => {
      const outer = document.querySelector(".outer");
      outer?.classList.toggle("explode");
    });
  });
</script>

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4rem;
  }

  button {
    background-color: var(--mark-color);
    color: var(--text-primary);
    border: none;
    padding: 4px 8px;
    border-radius: 4px;
    transition: filter 0.2s var(--transition-function-1);
  }

  button:hover {
    filter: brightness(110%);
  }

  .outer {
    /* Basic styling */
    background-color: rgb(0, 0, 0);
    width: 20rem;
    height: 10rem;
    border-radius: 8px;

    /* 3D exploding styling */
    transition: transform 1s var(--transition-function-1);
    transform-style: preserve-3d;

    &.explode {
      transform: rotateX(60deg) rotate(25deg);

      .inner {
        transform: translate3d(0, 0, -100px);
        transition-delay: 1.2s;
      }
    }

    &:not(.explode) {
      transition-delay: 1.2s;
    }
  }

  .inner {
    z-index: -1;
    inset: -2px;
    border-radius: 8px;
    background: linear-gradient(
      60deg,
      rgb(104, 255, 215),
      rgb(255, 214, 221),
      rgb(242, 140, 39)
    );
    position: absolute;
    transform: translate3d(0, 0, -1px);
    transition: transform 1s var(--transition-function-1);
  }
</style>

<div class="container">
  <button>Toggle</button>
  <div class="outer">
    <div class="inner"></div>
  </div>
</div>
